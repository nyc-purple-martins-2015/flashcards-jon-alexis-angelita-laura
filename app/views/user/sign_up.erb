<div class="login-container">
  <h1 id="signup-welcome">Sign up for our awesome game!</h1>

  <% if @user_exists %>
    <p> The username <%= @user.username %> exists already!  Please choose another!</p>
  <% end %>

  <form method = "post" action = "/sign_up">
    <div>
      <input type = "text" name = "user[username]" placeholder = "Joe Schomoe"/>
    </div>

    <br>
    <div>
      <input type = "password" name = "user[password]" placeholder = "password"/>
    </div>
    <br>

    <div>
      <input type = "submit" value = "sign up"/>
    </div>
  </form>
</div>

 <div class="login-container">
    <a href="/login">Already an existing member? </a>
  </div>