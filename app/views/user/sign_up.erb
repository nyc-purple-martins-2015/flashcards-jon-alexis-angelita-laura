<div class="login-container">
  <h1 id="signup-welcome"> Sign up to start studying</h1>

 <% if @user_exists %>
    <p> The username <%= @user.username %> exists already!  Please choose another!</p>
  <% end %>
  <div>


  <form method = "post" action = "/sign_up">
    <div>
      <input type = "text" name = "user[username]" placeholder = "Joe Schomoe"/>
    </div>
    <br>
    <div>
      <input type = "password" name = "user[password]" placeholder = "password"/>
    </div>
    <br>
    <div>
      <input type = "submit" value = "Sign Up"/>
    </div>
  </form>
</div>

<a href="/login"> Already an existing member? </a>
